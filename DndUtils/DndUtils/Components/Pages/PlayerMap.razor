@page "/player/{roomId}"
@rendermode InteractiveServer
@inject IJSRuntime JS

<canvas id="playerCanvas" style="display:block; max-width:100%; height:auto; border:1px solid black; pointer-events:none;"></canvas>

@code {
    [Parameter] public string roomId { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;
        await JS.InvokeVoidAsync("startPlayerHubConnection", roomId);
    }
}
